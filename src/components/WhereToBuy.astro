---
import Xeggex from '../BalkyImages/wheretobuyimgs/Xeggex X Only.svg';
import CoinEx from '../BalkyImages/wheretobuyimgs/coinex.svg';
import BitCom from '../BalkyImages/wheretobuyimgs/bit.png';
import Exibitron from '../BalkyImages/wheretobuyimgs/exibitron.png';
import Tradeogre from '../BalkyImages/wheretobuyimgs/tradeogre.png';
import LinkBox from '../BalkyImages/LinkBox.svg';

const icons = [
    {Visible: true, Name:"Xeggex exchange", ImgSrc: Xeggex.src, Url:"https://xeggex.com/market/WART_USDT"},
    {Visible: true, Name:"CoinEx exchange", ImgSrc: CoinEx.src, Url:"https://www.coinex.com/en/exchange/WART-USDT"},
    {Visible: true, Name:"Bit.com exchange", ImgSrc: BitCom.src, Url:"https://www.bit.com/spot?pair=WART-USDT"},
    {Visible: true, Name:"Exbitron exchange", ImgSrc: Exibitron.src, Url:"https://app.exbitron.com/login/?returnUrl=%2Ftrade%2F%3Fmarket%3Dwart-usdt"},
    {Visible: true, Name:"Tradeogre exchange", ImgSrc: Tradeogre.src, Url:"https://tradeogre.com/exchange/WART-USDT"}
];


---


<style>

  section {
        max-width: 1440px;
        margin: 0 auto;
        width:100%;
    }
    .icon-box {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 3rem;
    }

    .icon-box-item{
      text-align: center;
      color: white;
      display: block;
      width: 9.375rem;
      height: 12.8rem;
    }
  
  .icon-shape{
    padding-left: .8rem;
    padding-right: .8rem;
    border-radius: .5rem;
    width: 9.375rem;
    height: 9.375rem;
    background-color: black;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .icon-img{
    max-height: 80px;
  }

  .icon-txt{
    margin-top: .4rem;
    color:black;
    font-family: Montserrat;
    font-size: 1.25rem;
    font-weight: 400;
    line-height: 1.25rem;
    text-align: left;
    text-underline-position: from-font;
    text-decoration-skip-ink: none;

  }

  .icon-linkbox{
    width: 0.938rem;
    height: 0.938rem;
  }

  .NEWS{
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-top: 2rem;
    margin-bottom: 4rem;
  }
  .title{
      text-align: center;
      margin-bottom: 3.5rem;
      font-family: Montserrat;
      font-size: 3.125rem;
      font-weight: 700;
      line-height: 3.809rem;
      text-underline-position: from-font;
      text-decoration-skip-ink: none;

  }

@media screen and (max-width: 968px) {
  .icon-box {
    max-width: 700px;
    margin: 0 auto;
  }
}
</style>

<section  class="NEWS">
    <div class="title">Where to Buy?</div>
    <div class="icon-box">
      {icons.filter((icon) => icon.Visible)
      .map((icon) => (
        <a class="icon-box-item" href={icon.Url}>
          <div class="icon-shape">
            <img class="icon-img" src={icon.ImgSrc} alt="logo" />
          </div>
          <div class="flex relative">
            <div class="icon-txt">{icon.Name}</div>
            <img class="icon-linkbox absolute bottom-0 right-0 mb-[.07rem]" src={LinkBox.src}/>
          </div>
        </a>  
      ))}
      
    </div>    
</section>
