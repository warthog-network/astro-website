---
import ContentDiv from "../components/ContentDiv.jsx";
---

<style>
    .h12{ 
        font-size:1.3rem;
        font-weight: 800;
        font-style: bold;
    }
    li{
        font-size: .8rem;
    }
    .road{
        flex: 1 0 ;
        flex-shrink: 0;
        flex-grow: 1;
        padding-top: 0;
        max-height: 100%;
        object-fit: scale-down;
        margin-bottom: 1rem;
        max-width: 100%;
    }
    .blanket{
        padding-left: 12rem;
        padding-right: 12rem;
        align-items: center;
        justify-content: center;
        background: radial-gradient(
            circle at 24.1% 68.8%,
            rgb(50, 50, 50) 0%,
            rgb(0, 0, 0) 99.4%
        );
           color: white;
    }
    @media (max-width:1224px){
        .blanket{
        padding-left: 2rem;
        padding-right: 2rem;
        align-items: center;
        justify-content: center;
        background: radial-gradient(
            circle at 24.1% 68.8%,
            rgb(50, 50, 50) 0%,
            rgb(0, 0, 0) 99.4%
        );
           color: white;
    }
        
    }
    @media (max-width:824px){
        .blanket{
        padding-left: 0rem;
        padding-right: 0rem;
        align-items: center;
        justify-content: center;
        background: radial-gradient(
            circle at 24.1% 68.8%,
            rgb(50, 50, 50) 0%,
            rgb(0, 0, 0) 99.4%
        );
           color: white;
    }
        
    }
    .RoadMap{
      flex-wrap: wrap;
      gap: 3rem;
      padding: .1rem;
      justify-content: space-around;
      color: white;
    }
    .sectionline{
        border-bottom: dotted;
        margin-left: 5rem;
        margin-right: 5rem;
    }
    section{
        display: flex;
        flex-wrap: wrap;
        padding: 1rem;
    }
li{
    padding: .35rem;
    max-width: 20rem;
    min-width: 15rem;
}
.title{
    font-size: 3rem;
    padding: 1rem;
}
</style>

<div class="blanket">
<ContentDiv>
