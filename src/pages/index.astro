---
import ParallaxLayout from "../layouts/ParallaxLayout.astro";
import MarketData from "../components/MarketData.astro";

import Hero from '../components/Hero.astro';
import WhatsNew from '../components/WhatsNew.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import UniqueFeatures from "../components/UniqueFeatures.astro";
import RevolutionaryFeatures from "../components/RevolutionaryFeatures.astro";
import UpcomingFeatures from "../components/UpcomingFeatures.astro";
import RoadMap from "../components/RoadMap.astro";
import ChainContributors from "../components/ChainContributors.astro";
import WhereToBuy from "../components/WhereToBuy.astro";
const title ="Warthog Network"
---
<style>
  .wartSectionHeading {
    text-shadow: 5px 1px 4px  rgb(46, 46, 46);
  font-family: 'Montserrat';
  font-style: normal;
  font-weight: 700;
  font-size: 50px;
  line-height: 61px;
  padding-left: 1rem;
  padding-top: 1rem;
}

</style>
<BaseLayout title={title} >
    <ParallaxLayout
      inset="inset-x-0"
      height="h-[735px] md:h-[900px] lg:h-[520px]"
      backgroundTailwind="bg-[url('../Images/Parallax/WarthogParallaxBGwhite640.jpg')] md:bg-[url('../Images/Parallax/WarthogParallaxBGwhite768.jpg')] lg:bg-[url('../Images/Parallax/WarthogParallaxBGwhite.jpg')]"
      scrollSpeed="1">

    <Hero/>
    </ParallaxLayout>

    <section class="relative h-auto sm:auto  bg-gray-200">
    <WhatsNew/>
    </section>
  
    <UniqueFeatures></UniqueFeatures>


    <ParallaxLayout 
    inset="inset-0"
    height="h-[47rem] sm:h-[47rem] md:h-[35rem] lg:h-[55rem]"
    backgroundTailwind="bg-[url('../Images/Parallax/WarthogParallaxBGcolor640.jpg')] md:bg-[url('../Images/Parallax/WarthogParallaxBGcolor768.jpg')] lg:bg-[url('../Images/Parallax/WarthogParallaxBGcolor.jpg')]"
    scrollSpeed="1">
    <RevolutionaryFeatures/>
 
</ParallaxLayout>
<UpcomingFeatures/>

<section class=" bg-black">
    <div class="wartSectionHeading text-white text-left w-9/12 ">WartHog Network Chart</div>
    <MarketData></MarketData>
  </section>
  <WhereToBuy/>
<RoadMap/>
<ChainContributors/>

</BaseLayout>
